{
    "name": "Todo List",
    "manifest_version": 2,
    "description": "A simple Todo list in a popup menu :)",
    "icons": { "128": "icon.png" },
    "version": "1.0",
    "background": {
        "persistent": false,
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "tabs", "<all_urls>"
      ],
    
    "browser_action": {
        "default_title": "Todo",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}